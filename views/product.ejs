<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("partials/head.ejs") %>
</head>
<body>
    <header>
        <%- include ("partials/header.ejs") %>
    </header>
    <main>
        <div class="container first product">
            <div class="padding product">  
                <h1><%= item.name.replaceAll('-',' ') %></h1>
            </div>
            <img src="https://www.cashfort.com.br/app/img/slideimg.jpeg" alt="">
        </div>
        <div class="container second">
            <div class="padding product">
                <div class="content">
                    <div class="info">
                        <div class="stock sec">In stock</div>
                        <a class="buttons" href="/contact" target="_blank">Contact Us!</a>
                        <div class="sec compatibility">
                            <% if(item.marca != null){ %>
                                <div class="compa">
                                    <div class="icon">
                                        <img src="/images/icon/marca.png" alt="">
                                    </div>
                                    <div class="value">
                                        <p class="title">Brand</p>
                                        <p><%= item.marca %></p>
                                    </div>
                                </div>
                            <% } %>
                            <% if(item.compatibilidade != null){ %>
                                <div class="compa">
                                    <div class="icon">
                                        <img src="/images/icon/comp.png" alt="">
                                    </div>
                                    <div class="value">
                                        <p class="title">Compatibility</p>
                                        <p><%= item.compatibilidade %></p>
                                    </div>
                                </div>
                            <% } %>
                            <% if(item["moedas suportadas"] != null){ %>
                                <div class="compa">
                                    <div class="icon">
                                        <img src="/images/icon/moedas.png" alt="">
                                    </div>
                                    <div class="value">
                                        <p class="title">Supported currencies</p>
                                        <p><%= item["moedas suportadas"] %></p>
                                    </div>
                                </div>
                            <% } %>
                            <% if(item["blockchains suportadas"] != null){ %>
                                <div class="compa">
                                    <div class="icon">
                                        <img src="/images/icon/blockchain.png" alt="">
                                    </div>
                                    <div class="value">
                                        <p class="title">Supported blockchains</p>
                                        <p><%= item["blockchains suportadas"] %></p>
                                    </div>
                                </div>
                            <% } %>
                            <% if(item.conectividade != null){ %>
                                <div class="compa">
                                    <div class="icon">
                                        <img src="/images/icon/wifi.png" alt="">
                                    </div>
                                    <div class="value">
                                        <p class="title">Connectivity</p>
                                        <p><%= item.conectividade %></p>
                                    </div>
                                </div>
                            <% } %>
                            <% if(item.peso != ""){ %>
                                <div class="compa">
                                    <div class="icon">
                                        <img src="/images/icon/peso.png" alt="">
                                    </div>
                                    <div class="value">
                                        <p class="title">Weight</p>
                                        <p><%= item.peso %></p>
                                    </div>
                                </div>
                            <% } %>
                            <% if(item.tamanho != null){ %>
                                <div class="compa">
                                    <div class="icon">
                                        <img src="/images/icon/altura.png" alt="">
                                    </div>
                                    <div class="value">
                                        <p class="title">Size</p>
                                        <p><%= item.tamanho %></p>
                                    </div>
                                </div>
                            <% } %>
                            <% if(item.bateria != null){ %>
                                <div class="compa">
                                    <div class="icon">
                                        <img src="/images/icon/bateria.png" alt="">
                                    </div>
                                    <div class="value">
                                        <p class="title">Battery</p>
                                        <p><%= item.bateria %></p>
                                    </div>
                                </div>
                            <% } %>
                            <% if(item.manuseio != null){ %>
                                <div class="compa">
                                    <div class="icon">
                                        <img src="/images/icon/manu.png" alt="">
                                    </div>
                                    <div class="value">
                                        <p class="title">Handling</p>
                                        <p><%= item.manuseio %></p>
                                    </div>
                            <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="image">
                    <img src="<%= item.foto %>" alt="hero">
                </div>
        </div>
    </main>
    <footer>
        <%- include ("partials/footer.ejs") %>
    </footer>
</body>
</html>